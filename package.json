{
  "name": "shadow-dom-utils",
  "version": "0.3.0",
  "description": "A set of utilities for dealing with shadow DOM.",
  "main": "./lib/index.js",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "default": "./lib/index.js"
  },
  "files": [
    "lib/!(test)",
    "dist/!(test.js)"
  ],
  "scripts": {
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build:esm": "esbuild --outfile=dist/index.js --format=esm src/index.ts",
    "build": "tsc && npm run build:esm",
    "test": "karma start --single-run",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/shadow-dom-utils.git"
  },
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/43081j/shadow-dom-utils/issues"
  },
  "homepage": "https://github.com/43081j/shadow-dom-utils#readme",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "chai": "^4.2.0",
    "esbuild": "^0.8.27",
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^30.3.1",
    "karma": "^5.2.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^8.1.3",
    "prettier": "^2.1.1",
    "puppeteer": "^5.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "postcss-selector-parser": "^6.0.2"
  }
}
