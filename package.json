{
  "name": "@43081j/shadow-query",
  "version": "0.0.1",
  "description": "A utility for querying beyond shadow boundaries",
  "main": "lib/index.js",
  "module": "dist/index.js",
  "files": [
    "lib/!(test)"
  ],
  "scripts": {
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build": "tsc && rollup -c",
    "test": "karma start --single-run",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/shadow-query.git"
  },
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/43081j/shadow-query/issues"
  },
  "homepage": "https://github.com/43081j/shadow-query#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^27.0.4",
    "karma": "^5.0.9",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "puppeteer": "^3.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.13.1",
    "rollup-plugin-external-globals": "^0.5.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "postcss-selector-parser": "^6.0.2"
  }
}
